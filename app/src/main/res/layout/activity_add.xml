<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="my.dotton.gamememo.AddActivity">
            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/add_spinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                style="@style/SpinnerItem"

                android:layout_marginRight="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="SpeakableTextPresentCheck" />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/add_layout_title"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:boxStrokeColor="@color/textinput_style"
                app:hintTextColor="@color/very_peri"
                app:endIconMode="clear_text"
                app:counterEnabled="true"
                app:counterMaxLength="5"
                app:layout_constraintTop_toBottomOf="@+id/add_spinner"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/add_edt_title"
                    android:singleLine="true"
                    android:inputType="text"
                    android:maxLength="5"
                    android:hint="제목"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/add_layout_id"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:boxStrokeColor="@color/textinput_style"
                app:hintTextColor="@color/very_peri"
                app:endIconMode="clear_text"
                app:counterEnabled="true"
                app:counterMaxLength="30"
                app:layout_constraintTop_toBottomOf="@+id/add_layout_title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/add_edt_id"
                    android:singleLine="true"
                    android:inputType="text"
                    android:maxLength="30"
                    android:hint="아이디"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                app:boxStrokeColor="@color/textinput_style"
                app:hintTextColor="@color/very_peri"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/add_layout_pwd"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:endIconMode="clear_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:counterEnabled="true"
                app:counterMaxLength="20"
                app:layout_constraintTop_toBottomOf="@+id/add_layout_id"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/add_edt_pwd"
                    android:singleLine="true"
                    android:inputType="text"
                    android:maxLength="20"
                    android:hint="비밀번호"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/add_layout_pwd2"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextColor="@color/very_peri"
                app:boxStrokeColor="@color/textinput_style"
                app:endIconMode="clear_text"
                app:counterEnabled="true"
                app:counterMaxLength="20"
                app:layout_constraintTop_toBottomOf="@+id/add_layout_pwd"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/add_edt_pwd2"
                    android:inputType="text"
                    android:singleLine="true"
                    android:maxLength="20"
                    android:hint="2차 비밀번호"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:id="@+id/add_btn_ok"
                android:backgroundTint="@color/gray"
                android:text="생성"
                android:layout_marginTop="40dp"
                android:enabled="false"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/add_layout_pwd2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/add_btn_cancel"/>
            <Button
                android:id="@+id/add_btn_cancel"
                android:backgroundTint="@color/very_peri"
                android:text="취소"
                android:layout_marginTop="40dp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/add_layout_pwd2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/add_btn_ok"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>