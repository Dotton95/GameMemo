<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp">
    <ImageView
        android:id="@+id/memo_iv_icon"
        android:src="@drawable/fifa4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="centerInside"
        android:background="@drawable/circle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/memo_tv_title"
        tools:text="본계정"
        android:textSize="15dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/memo_iv_icon"/>
    <View
        android:id="@+id/memo_v_bind"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="160dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/memo_tv_id"
        tools:text="ID : mychemicallove"
        android:textSize="13dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/memo_tv_pwd"
        app:layout_constraintLeft_toLeftOf="@+id/memo_v_bind"/>
    <TextView
        android:id="@+id/memo_tv_pwd"
        tools:text="1차 : 159a159!"
        android:textSize="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/memo_tv_id"
        app:layout_constraintBottom_toTopOf="@id/memo_tv_pwd2"
        app:layout_constraintLeft_toLeftOf="@+id/memo_v_bind"/>
    <TextView
        android:id="@+id/memo_tv_pwd2"
        tools:text="2차 : 159a159!"
        android:textSize="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/memo_tv_pwd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/memo_v_bind"/>
    <ImageView
        android:id="@+id/memo_iv_handle"
        android:src="@drawable/baseline_drag_handle_24"
        android:layout_marginRight="20dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>